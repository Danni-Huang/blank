@{
    ViewData["Title"] = "SPA Web App";
}

<header>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</header>

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h4>All Quotes:</h4>
        <ul id="quotesList" style="background-color: #f8f9fa">
            
        </ul>
        <p id="quoteItemsMsg"></p>
        <br />
        <hr class="border border-secondary border-3 opacity-75">

        <h4>Edit a Quote:</h4>
        <label for="selectedQuoteId"><b>Enter the quote Id here:</b></label>
        <input type="text" id="selectedQuoteId" name="selectedQuoteId" class="form-control" />
        <button type="button" id="editQuoteBtn" class="btn btn-primary">Edit Quote</button>

        <form id="editQuoteForm" style="display: none; background-color: #dee2e6;">

            <h4>Edit a Quote:</h4>
            <div class="form-group">
                <label for="editQuoteContent">Content:</label>
                <input type="text" id="editQuoteContent" name="editQuoteContent" class="form-control" />
            </div>

            <div class="form-group">
                <label for="editQuoteAuthor">Author:</label>
                <input type="text" id="editQuoteAuthor" name="editQuoteAuthor" class="form-control" />
                <label for="quoteTagForEditQuote">Tag:</label>
                <div id="existingTags">
                </div>
                <select id="quoteTagForEditQuote" name="quoteTagForEditQuote" class="form-control">
                    <option value="">Assign a New Tag</option>
                </select>
                <button type="button" id="confirmUpdateBtn" class="btn btn-primary">Confirm Update</button>
            </div>
        </form>
        <p id="confirmUpdatedQuoteMsg"></p>

        <br />
        <hr class="border border-secondary border-3 opacity-75">

        <p></p>
        <h4>The Most liked Quotes:</h4>
        <ul id="mostLikedQuotesList">

        </ul>
        <label for="numsMostLikedQuotes"><b>Numbers of Most Liked Quotes:</b></label>
        <input type="text" id="numsMostLikedQuotes" name="numsMostLikedQuotes" class="form-control" />
        <button type="button" id="numsMostLikedQuotesBtn" class="btn btn-primary">Nums Most Liked Quotes</button>
        <p id="quoteRankMsg"></p>
   
    </div>
    <div class="col-sm-12 col-md-6">
        <h4>Add a Quote:</h4>
        <form>
            <div class="form-group">
                <label for="quoteContent">Content:</label>
                <input type="text" id="quoteContent" name="quoteContent" class="form-control" />
            </div>

            <div class="form-group">
                <label for="quoteAuthor">Author:</label>
                <input type="text" id="quoteAuthor" name="quoteAuthor" class="form-control" />
            </div>

            <button type="button" id="addQuoteBtn" class="btn btn-primary">Add quote</button>
        </form>
        <p id="newQuoteMsg"></p>

        <br />
        <hr class="border border-secondary border-3 opacity-75">

        <div style="background-color: #dee2e6">
            <h4>Add a new Tag:</h4>
            <form>
                <div class="form-group">
                    <input type="text" id="tagName" name="tagName" class="form-control" />
                </div>

                <button type="button" id="addTagBtn" class="btn btn-primary">Add tag</button>
            </form>
            <p id="newTagMsg"></p>
        </div>

        <br />
        <hr class="border border-secondary border-3 opacity-75">

        <p></p>
        <h4>Get Quotes By Tag:</h4>
        <ul id="quotesByTag">
        </ul>

        <label for=""><b>All Current Tags:</b></label>
        <select id="quoteTag" name="quoteTag" class="form-control">
            <option value="">Select a Tag</option>
        </select>
        <button type="button" id="selectTagBtn" class="btn btn-primary">Search</button>
    </div>
</div>